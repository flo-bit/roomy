{
  "name": "discord-bridge",
  "version": "1.0.0",
  "description": "Bridge between Discord and Roomy - Node.js Server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "dev": "nodemon -I --exec \"node --loader ts-node/esm --require tsconfig-paths/register --experimental-specifier-resolution=node ./src/index.ts\"",
    "prepare": "pnpm build"
  },
  "dependencies": {
    "@roomy-chat/sdk": "workspace:*",
    "cors": "^2.8.5",
    "discord.js": "^14.19.3",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jazz-tools": "catalog:",
    "marked": "^15.0.12",
    "turndown": "^7.2.0",
    "undici": "6.21.1",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.17",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}